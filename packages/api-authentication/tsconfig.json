{
  "extends": "../../tsconfig.json",
  "include": ["src", "__tests__/**/*.ts"],
  "references": [{ "path": "../api" }, { "path": "../fastify" }],
  "compilerOptions": {
    "rootDirs": ["./src", "./__tests__"],
    "outDir": "./dist",
    "declarationDir": "./dist",
    "paths": {
      "~/*": ["./src/*"],
      "@webiny/api/*": ["../api/src/*"],
      "@webiny/api": ["../api/src"],
      "@webiny/fastify/*": ["../fastify/src/*"],
      "@webiny/fastify": ["../fastify/src"]
    },
    "baseUrl": "."
  }
}
