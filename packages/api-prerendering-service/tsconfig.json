{
  "extends": "../../tsconfig.json",
  "include": ["src", "__tests__/**/*.ts"],
  "references": [
    { "path": "../error" },
    { "path": "../api" },
    { "path": "../fastify" },
    { "path": "../handler-fastify-aws" },
    { "path": "../handler-client" },
    { "path": "../plugins" }
  ],
  "compilerOptions": {
    "rootDirs": ["./src", "./__tests__"],
    "outDir": "./dist",
    "declarationDir": "./dist",
    "paths": {
      "~/*": ["./src/*"],
      "@webiny/error/*": ["../error/src/*"],
      "@webiny/error": ["../error/src"],
      "@webiny/api/*": ["../api/src/*"],
      "@webiny/api": ["../api/src"],
      "@webiny/fastify/*": ["../fastify/src/*"],
      "@webiny/fastify": ["../fastify/src"],
      "@webiny/handler-fastify-aws/*": ["../handler-fastify-aws/src/*"],
      "@webiny/handler-fastify-aws": ["../handler-fastify-aws/src"],
      "@webiny/handler-client/*": ["../handler-client/src/*"],
      "@webiny/handler-client": ["../handler-client/src"],
      "@webiny/plugins/*": ["../plugins/src/*"],
      "@webiny/plugins": ["../plugins/src"]
    },
    "baseUrl": "."
  }
}
