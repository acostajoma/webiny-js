{
  "extends": "../../tsconfig.json",
  "include": ["src", "__tests__/**/*.ts"],
  "references": [{ "path": "../fastify" },{ "path": "../api-core" }],
  "compilerOptions": {
    "rootDirs": ["./src", "./__tests__"],
    "outDir": "./dist",
    "declarationDir": "./dist",
    "paths": {
      "~/*": ["./src/*"],
      "@webiny/fastify/*": ["../fastify/src/*"],
      "@webiny/fastify": ["../fastify/src"],
      "@webiny/api-core/*": ["../api-core/src/*"],
      "@webiny/api-core": ["../api-core/src"]
    },
    "baseUrl": "."
  }
}
