{
  "extends": "../../tsconfig.json",
  "include": ["src", "__tests__/**/*.ts"],
  "references": [
    { "path": "../handler" },
    { "path": "../handler-args" },
    { "path": "../plugins" },
    { "path": "../utils" }
  ],
  "compilerOptions": {
    "rootDirs": ["./src", "./__tests__"],
    "outDir": "./dist",
    "declarationDir": "./dist",
    "paths": {
      "~/*": ["./src/*"],
      "@webiny/handler-old/*": ["../handler/src/*"],
      "@webiny/handler-old": ["../handler/src"],
      "@webiny/handler-args-old/*": ["../handler-args/src/*"],
      "@webiny/handler-args-old": ["../handler-args/src"],
      "@webiny/plugins/*": ["../plugins/src/*"],
      "@webiny/plugins": ["../plugins/src"],
      "@webiny/utils/*": ["../utils/src/*"],
      "@webiny/utils": ["../utils/src"]
    },
    "baseUrl": "."
  }
}
